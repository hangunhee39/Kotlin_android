<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end1"
        motion:constraintSetStart="@id/start1"
        motion:duration="500"
        motion:motionInterpolator="easeIn">
        <KeyFrameSet></KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@id/end2"
        motion:constraintSetStart="@+id/start2"
        motion:duration="500"
        motion:motionInterpolator="easeIn">
        <KeyFrameSet></KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start1">
        <Constraint
            android:id="@+id/redView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.3"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.3" />

        <Constraint
            android:id="@+id/yellowView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:alpha="0"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.7"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.3" />

